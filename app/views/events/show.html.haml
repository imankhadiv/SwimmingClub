.container
  .row
    #event.col-md-5.col-md-offset-3
      #event_alert.alert.alert-info.text-center
        %h4= @event.title

      %table.table.alert.alert-success
        %tr
          %th Details:
          %td= @event.details
        %tr
          %th Date:
          %td= @event.date
        %tr
          %th Start time:
          %td= @event.start.strftime('%H:%M')
        %tr
          %th End time:
          %th= @event.finish.strftime('%H:%M')
        %tr
          %th Created By:
          %td= "#{@event.user.first_name} #{@event.user.last_name}" if @event.user
        %tr
      = event_navigation_links @event
      -#= link_to 'Back', events_path, class: 'btn btn-success'
      -#= link_to 'Edit', edit_event_path(@event)
      -#= link_to 'Destroy', @event, :method => :delete, :data => { :confirm => 'Are you sure?' }

    .col-md-2.col-md-offset-3
      %br
      %br