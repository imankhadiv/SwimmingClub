= form_for @address do |f|
  - if @address.errors.any?
    #error_explanation
      %h2= "#{pluralize(@address.errors.count, "error")} prohibited this address from being saved:"
      %ul
        - @address.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :line1
    = f.text_field :line1
  .field
    = f.label :line2
    = f.text_field :line2
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :postcode
    = f.text_field :postcode
  .field
    = f.label :telephone
    = f.number_field :telephone
  .field
    = f.label :emergency_contact
    = f.text_field :emergency_contact
  .field
    = f.label :addressable_id
    = f.number_field :addressable_id
  .field
    = f.label :addressable_type
    = f.text_field :addressable_type
  .actions
    = f.submit 'Save'
