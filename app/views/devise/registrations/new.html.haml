.container
  %h2 Sign up
  .signup.col-md-8

    = bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      -#= devise_error_messages!
      .col-md-4
        .form_inputs
          = f.text_field :first_name, autofocuse: true
          = f.text_field :last_name
          = f.select :role, ["Adminstrator","Swimmer","parent"]
          = f.email_field :email
          = f.password_field :password
          = f.password_field :password_confirmation

        .form-actions
          = f.submit 'Sign Up', :class=>'btn btn-primary btn-lg active'
