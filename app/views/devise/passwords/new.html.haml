
%br
.container
  .forget-password.col-md-5.col-md-offset-4
    %h2 Forgot your password?
    .form{style: "background-color: rgba(4,17,8,0. 9)"}
      = bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        =f.alert_message "Please fix the following errors", error_summary: false


        = f.email_field :email, autofocus: true
        =f.submit 'Send reset password instructions', :class=> 'btn btn-primary btn-large'
        //.btn.btn-primary.btn-lg= f.submit 'Send reset password instructions'
        %br/
        %br/
        %br/
        %b= render "devise/shared/links"
        %br/
